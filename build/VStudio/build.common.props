<Project>

  <!-- properties (common) -->
  <PropertyGroup>
    <OutDir>$(SolutionDir)build\$(Configuration)\</OutDir>
    <IntDir>$(SolutionDir)build\$(ProjectName).build\$(Configuration)\$(PlatformTarget)\</IntDir>
    <TargetName>$([System.IO.Path]::GetFileNameWithoutExtension($(ProjectName)))</TargetName>
  </PropertyGroup>

  <!-- properties (target OS | configuration) -->
  <PropertyGroup Condition="'$(ApplicationType)|$(Configuration)'=='|Debug'">
    <PlatformToolset>$(DefaultPlatformToolset)</PlatformToolset>
    <UseDebugLibraries>true</UseDebugLibraries>
    <LinkIncremental>true</LinkIncremental>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ApplicationType)|$(Configuration)'=='|Release'">
    <PlatformToolset>$(DefaultPlatformToolset)</PlatformToolset>
    <UseDebugLibraries>false</UseDebugLibraries>
    <LinkIncremental>false</LinkIncremental>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ApplicationType)|$(Configuration)'=='Linux|Debug'">
    <PlatformToolset>WSL_1_0</PlatformToolset>
    <RemoteCCompileToolExe>$([MSBuild]::EnsureTrailingSlash($([MSBuild]::MakeRelative($(MSBuildProjectDirectory), $(MsbuildThisFileDirectory)))).Replace('\', '/'))cctool.sh</RemoteCCompileToolExe>
    <RemoteCppCompileToolExe>$(RemoteCCompileToolExe)</RemoteCppCompileToolExe>
    <RemoteLdToolExe>$(RemoteCCompileToolExe)</RemoteLdToolExe>
    <UseDebugLibraries>true</UseDebugLibraries>
  </PropertyGroup>
  <PropertyGroup Condition="'$(ApplicationType)|$(Configuration)'=='Linux|Release'">
    <PlatformToolset>WSL_1_0</PlatformToolset>
    <RemoteCCompileToolExe>$([MSBuild]::EnsureTrailingSlash($([MSBuild]::MakeRelative($(MSBuildProjectDirectory), $(MsbuildThisFileDirectory)))).Replace('\', '/'))cctool.sh</RemoteCCompileToolExe>
    <RemoteCppCompileToolExe>$(RemoteCCompileToolExe)</RemoteCppCompileToolExe>
    <RemoteLdToolExe>$(RemoteCCompileToolExe)</RemoteLdToolExe>
    <UseDebugLibraries>false</UseDebugLibraries>
  </PropertyGroup>

  <!-- item definitions (target os | configuration) -->
  <ItemDefinitionGroup Condition="'$(ApplicationType)|$(Configuration)'=='|Debug'">
    <ClCompile>
      <LanguageStandard_C>stdc11</LanguageStandard_C>
      <ConformanceMode>true</ConformanceMode>
      <WarningLevel>Level3</WarningLevel>
      <RuntimeLibrary>MultiThreadedDebug</RuntimeLibrary>
    </ClCompile>
    <Link>
      <GenerateDebugInformation>true</GenerateDebugInformation>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(ApplicationType)|$(Configuration)'=='|Release'">
    <ClCompile>
      <LanguageStandard_C>stdc11</LanguageStandard_C>
      <ConformanceMode>true</ConformanceMode>
      <WarningLevel>Level3</WarningLevel>
      <RuntimeLibrary>MultiThreaded</RuntimeLibrary>
      <FunctionLevelLinking>true</FunctionLevelLinking>
      <IntrinsicFunctions>true</IntrinsicFunctions>
    </ClCompile>
    <Link>
      <GenerateDebugInformation>true</GenerateDebugInformation>
      <EnableCOMDATFolding>true</EnableCOMDATFolding>
      <OptimizeReferences>true</OptimizeReferences>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(ApplicationType)|$(Configuration)'=='Linux|Debug'">
    <ClCompile>
      <CLanguageStandard>c11</CLanguageStandard>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(ApplicationType)|$(Configuration)'=='Linux|Release'">
    <ClCompile>
      <CLanguageStandard>c11</CLanguageStandard>
    </ClCompile>
  </ItemDefinitionGroup>

</Project>